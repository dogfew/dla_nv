{
  "name": "gan",
  "n_gpu": 1,
  "arch": {
    "type": "HiFiGAN",
    "args": {
    }
  },
  "data": {
      "train": {
        "batch_size": 16,
        "num_workers": 8,
        "datasets": [
          {
            "type": "BufferDataset",
            "args": {
              "max_len": 22528,
              "wav_dir": "data/LJSpeech-1.1/wavs/"
            }
          }
        ]
      },
    "test": {
      "batch_size": 1,
      "datasets": [
        {
          "type": "BufferDataset",
          "args": {
            "max_len": 1e+1000,
            "wav_dir": "test_data"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 2e-4,
      "weight_decay": 1e-2,
      "betas": [0.8, 0.99]
    }
  },
  "loss": {
    "type": "HiFiGANLoss",
    "args": {
    }
  },
  "metrics": [
    "discriminator_loss",
    "generator_loss",
    "generator_gan_loss",
    "feature_loss",
    "mel_loss"
  ],
  "lr_scheduler": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 0.998
    }
  },
  "trainer": {
    "epochs": 400,
    "save_dir": "saved/",
    "save_period": 20,
    "verbosity": 2,
    "visualize": "wandb",
    "wandb_project": "nv_project",
    "grad_norm_clip": 5.0,
    "log_predictions_step_epoch": 5,
    "mixed_precision": true,
    "len_epoch": 100
  }
}
